{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


        <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-md-6">
                <h2 class="mb-4">Enregistrement</h2>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        <div class="form-floating gx-2">
                            <input name="{{ field_name(registrationForm.nom) }}" type="text" class="form-control" required="required" />
                            <label for="nom" class="form-label">Nom</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating gx-2">
                            <input name="{{ field_name(registrationForm.prenom) }}" type="text" class="form-control" required="required" />
                            <label for="prenom" class="form-label">Pr√©nom</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating gx-2">
                            <input name="{{ field_name(registrationForm.email) }}" type="email" class="form-control" required="required" />
                            <label for="email" class="form-label">Email</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating gx-2">
                            <input name="{{ field_name(registrationForm.plainPassword) }}" type="password" class="form-control" required="required" />
                            <label for="plainPassword" class="form-label">Mot de passe</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">S'enregistrer</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
{% endblock %}
